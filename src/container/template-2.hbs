<div class="page_content">
	<header class="page_block">
		{{#with header}}
		<div class="header row g-0">
			<div class="col-3">
				{{> logo}}
			</div>

			<nav class="col-9 text-end">
				{{#each this}}
				<a href="{{href}}" class="nav_item">{{text}}</a>
				{{/each}}
			</nav>
		</div>
		{{/with}}
	</header>

	<section class="page_block">
		<div class="hero">
			{{#with hero}}
			{{> hero data=this title=title text=text}}
			<a class="button" href="{{button.url}}">{{button.text}}</a>
			{{/with}}
		</div>
	</section>

	<section class="page_block">
		<div class="row g-4">
			{{#each preview}}
			<div class="col-6">
				{{> cardPreview data=this}}
			</div>
			{{/each}}
		</div>
	</section>

	<main class="page_block">
		<div class="main">
			<div class="row g-0">
				<div class="col-12">
					<div class="list_header">
						<div class="row g-0">
							<div class="col-6">
								<h2 class="list_title">List of posts</h2>
							</div>
							<div class="col-6">
								<div class="category_list">
									{{#each categories}}
									<button class="category_button">{{text}}</button>
									{{/each}}
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="col-7">
					<div class="list">
						{{#each news}}
						{{> cardPost data=this}}
						{{/each}}
					</div>
				</div>

				<div class="col-5">
					<aside class="list_aside">
						<div class="about">
							<h4 class="about_title">About</h4>
							<p class="about_text">{{about}}</p>
						</div>

						{{> linkList data=archive title="Archives"}}

						{{> linkList data=social title="Social"}}
					</aside>
				</div>
			</div>
		</div>
	</main>

	<footer class="page_block">
		<div class="row g-0 footer">
			<div class="col-3">
				{{> logo}}
				<span class="footer_copyright">Copyright 2023</span>
			</div>

			{{#each footer}}
			<div class="col-3">
				<strong class="footer_title">{{title}}</strong>
				<ul class="list-unstyled">
					{{#each links}}
					<li>
						<a class="footer_links" href="{{url}}">{{text}}</a>
					</li>
					{{/each}}
				</ul>
			</div>
			{{/each}}
		</div>
	</footer>
</div>