<header class="header">
	{{#with header}}
	{{> headerDark}}

	<div class="ad_block">
		<div class="ad_content">
			{{#with ad}}
			<a href="{{url}}" class="ad_link">Ad</a>
			<span>{{text}}:{{url}}</span>
			{{/with}}
		</div>
		<span class="users_online">Users online: {{userOnline}}</span>
	</div>

	{{/with}}
</header>

<div class="hero">
	{{#with hero}}
	<h1 class="hero_title">{{title}}</h1>
	<p class="hero_text">{{description}}</p>
	<a href="{{button.url}}" class="button hero_button">{{button.text}}</a>
	{{/with}}
</div>

<div class="about">
	{{#with about}}
	<h3 class="about_title">{{heading}}</h3>
	<p class="about_info">{{info}}</p>
	{{/with}}
</div>

<div class="articles">
	<div class="articles_header">
		<h2 class="articles_title">Our Articles</h2>
		<a href="#" class="articles_button">View All</a>
	</div>

	<div class="articles_cards">
		{{#each articles}}
		{{> articleCardDark data=this}}
		{{/each}}
	</div>
</div>

<footer class="footer">
	{{#with footer}}
	{{> footerDark}}
	{{/with}}
</footer>