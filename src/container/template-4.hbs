<header class="header">
	<div>
		{{> logo}}
	</div>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>
	</nav>
</header>

{{#with main}}
<main class="main">
	<div class="main_content">
		<h1 class="main_heading">{{heading}}</h1>
		<p class="main_description">{{description}}</p>
		<a class="button main_button" href="{{href}}">{{button}}</a>
	</div>

	<img src="{{image}}" alt="Main image" class="main_image">
</main>
{{/with}}

<div class="featured">
	{{#each featured}}
	{{>cardFeatured data=this}}
	{{/each}}
</div>

<div class="actions">
	{{#each actions}}
	<div class="actions-content">
		<h3 class="actions_title">{{heading}}</h3>
		<a class="actions_button" href="{{url}}">{{text}}</a>
	</div>
	{{/each}}

</div>


<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Â© 2023</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>