<header class="header">
	<a href="#">
		{{> logo}}
	</a>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="info_block">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_text">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form-input-{{id}}">
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}">
			<label>{{checkbox.label}}</label>
		</div>

		<button type="submit" class="form_button">{{button}}</button>
		<div class="line"></div>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

<div class="section">
	{{#with updates}}
	<div class="updates">
		<h1 class="updates_title">{{title}}</h1>

		{{#each list}}
		<div class="note">
			<strong class="note_name">{{nickname}}</strong>
			<p class="note_text">{{description}}</p>
			<div class="square"></div>
		</div>
		{{/each}}

		{{#with show_all}}
		<a href="{{url}}" class="updates_link">{{text}}</a>
		{{/with}}
	</div>
	{{/with}}
</div>

<div class="expirience">
	{{#with expirience}}
	<h1 class="expirience_title">{{title}}</h1>

	<div class="list">
		{{#each list}}
		<div class="list_block">
			<strong>{{name}}</strong>
			<p>{{details}}</p>
		</div>
		{{/each}}
	</div>
	{{/with}}
</div>

<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Â© 2023</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>